{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@repositories/*": [
        "./src/lib/repositories/*"
      ],
      "@services/*": [
        "./src/lib/services/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@fonts/*": [
        "./src/fonts/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@icons/*": [
        "./src/icons/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
